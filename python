print("Bem-Vindo ao PedroBank!!")

saldo = int(input("Digite o valor que vc possui: "))

print('''[d] depositar
[s] sacar
[e] extrato
[q] sair''')

comando = input("qual op√ß√£o vc deseja? ")

if comando == "d":
    deposito = int(input("qual valor vc deseja depositar ? "))
    saldo = saldo + deposito
    print(f"seu saldo √© de {saldo}")

elif comando == "s":
    sacar = int(input("quanto deseja retirar?  "))
    if sacar <= 500 and sacar <= saldo:   # üëà limite de saque e saldo
        saldo = saldo - sacar
        print(f"seu saldo atual √© de {saldo}")
    elif sacar > 500:
        print("Voc√™ bateu o limite m√°ximo de saque (500 por vez)")
    else:
        print("Saldo insuficiente!")

elif comando == "e":
    print(f'''========= EXTRATO =========
Seu saldo √© de {saldo}''')

elif comando == "q":
    print("Tchau, at√© logo!")
    exit()

else:
    print("Op√ß√£o inv√°lida!")
